{
  "version": 2,
  "builds": [
    {
      "src": "index.js",
      "use": "@vercel/node"
    },
    {
      "src": "client/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "handle": "filesystem" },
    {
      "src": "/(.+)",
      "dest": "client/$1"
    },
    { "src": "/api/(.*)", "dest": "index.js" }
  ]
}
